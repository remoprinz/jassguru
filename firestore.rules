// !!! NICHT FÜR PRODUKTION VERWENDEN !!!
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // ALLES ERLAUBEN ZUM DEBUGGING
    match /{document=**} {
      allow read: if true; // JEDER darf lesen, auch ohne Anmeldung
      allow write: if request.auth != null; // Jeder AUTHENTIFIZIERTE Benutzer darf schreiben
    }
  }
}