rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // --- Profilbilder ---
    match /profileImages/{userId}/{allPaths=**} {
       // Jeder darf lesen (Bilder anzeigen)
       allow read: if true; 
       
       // Nur der eigene User darf sein Profilbild hochladen/löschen
       allow write, delete: if request.auth != null && request.auth.uid == userId; 
    }

    // --- Gruppenlogos ---
    // Pfad: groupLogos/{userId}/{groupId}/{fileName}
    // LASCHE REGELN: Hauptsächlich Frontend-Prüfung für bessere Fehlermeldungen
    match /groupLogos/{userId}/{groupId}/{allPaths=**} { 
       // Jeder darf lesen (Logos anzeigen)
       allow read: if true; 
       
       // VEREINFACHTE Schreib-/Lösch-Berechtigung:
       // 1. User ist authentifiziert
       // 2. User ist der Besitzer des Pfades (userId) 
       // 3. Datei ist ein Bild unter 2MB
       // ADMIN-PRÜFUNG erfolgt im Frontend für bessere UX!
       allow write: if request.auth != null 
                       && request.auth.uid == userId
                       && request.resource.size < 2 * 1024 * 1024 
                       && request.resource.contentType.matches('image/.*');
       
       allow delete: if request.auth != null 
                        && request.auth.uid == userId;
    }

    // Optional: Alle anderen Pfade blockieren
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
} 