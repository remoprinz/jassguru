{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "auth/**/*.ts",
    "auth/**/*.tsx",
    "game/**/*.ts",
    "game/**/*.tsx",
    "groups/**/*.ts",
    "groups/**/*.tsx",
    "profile/**/*.ts",
    "profile/**/*.tsx",
    "tournaments/**/*.ts",
    "tournaments/**/*.tsx",
    "view/**/*.ts",
    "view/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "**/_next/**",
    "**/out/**",
    "**/out-wiki/**",
    "**/dist/**",
    "**/.next/**",
    "**/dist-scripts/**",
    "scripts/**",
    "**/*.cjs",
    "**/*.mjs",
    "functions/**"
  ]
}
